#!/usr/bin/env bash


# ruta
path=${1}
path=${path:="${HOME}/src/LeyesMexicanas/federales"}

# Obteniendo leyes
ley2txt "${path}"

# ir a la ruta
cd "${path}"

# Hacer sha512sum
find "${path}" -type f -exec cat {} \; | sha512sum > federales.sha512

# Hacer commit del dia
echo 'Haciendo commit...'
git add .
git commit -a -m "Actualizaci√≥n de $( TZ='America/Mexico_City' date )"

# Enviar a Github
git push origin master


exit 0
